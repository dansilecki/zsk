

#include <iostream>
#include <ctime>
#include <cstdlib>
#include <iomanip>


using namespace std;



int main()
{
    int n, mini;
    cout<<"Podaj ile elementow ciagu: ";
    cin>>n;

    srand(time(NULL));
    int *T=new int[n];

    for(int i=0; i<n; i++)
    {
        T[i]=rand()%111-10;
        cout<<setw(4)<<T[i];
    }

    for(int i=0; i<n-1; i++)
        for(int j=i+1; j<n; j++)
            if(T[j] >= T[i])
                swap(T[j],T[i]);


    cout<<endl;

    for(int i=0; i<n; i++)
        cout<<setw(4)<<T[i];

    delete []T;
    return 0;
}


